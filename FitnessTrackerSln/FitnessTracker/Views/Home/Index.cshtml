@model IQueryable<Workout>

<a asp-action="Create" class="btn btn-primary">Create</a>
<table class="table table-dark"  id="myTable">
    <thead>
        <tr>
            <th onclick="sortTable(0)">Lift ID</th>
            <th onclick="sortTable(1)">Lift Name</th>
            <th>Reps</th>
            <th>Weight</th>
            <th onclick="sortTable(2)">Date</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var w in Model) {
            <tr>
                <td>@w.WorkoutID</td>
                <td>@w.Lift</td>
                <td>@w.Reps</td>
                <td>@w.Weight</td>
                <td>@w.WorkoutDate</td>
                <td><a asp-action="Details" asp-route-id="@w.WorkoutID" 
                         type="button" class="btn btn-primary">Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@w.WorkoutID"
                         type="button" class="btn btn-info">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@w.WorkoutID"
                         type="button" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

